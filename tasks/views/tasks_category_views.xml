<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
 <!-- Action view -->
    <record id="action_tasks_category" model="ir.actions.act_window">
			<field name="name"> Category </field>
			<field name="res_model">tasks.category</field>
			<field name="view_mode">tree,form</field>
             <field name="help" type="xml">
                <p class="o_view_nocontent_smiling_face">
                    Create category
                </p>
			</field>
		</record>

<!-- from view -->
        <record id="view_category_form" model="ir.ui.view">
			<field name="name">tasks.category.form</field>
			<field name="model">tasks.category</field>
			<field name="arch" type="xml">
				<form string="Add Category ">
                <sheet>
					<group>
						<field name="name" />
                        <field name="project_id"/>

					</group>
                </sheet>
				</form>
			</field>
		</record>

<!-- tree view -->
    <record id="view_category_tree" model="ir.ui.view">
        <field name="name">tasks.category.tree</field>
        <field name="model">tasks.category</field>
        <field name="arch" type="xml">
            <tree sample ="1" string="Category">
	               		<field name="name" />
				        <field name="project_id"/>
            </tree>
        </field>
    </record>
    </data>
</odoo>