<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="car_rental_form_view" model="ir.ui.view">
            <field name="name">tasks.carrental.form</field>
            <field name="model">tasks.carrental</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                                <field name="name"/>
                                <field name="price"/>
                                <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="car_rental_tree_view" model="ir.ui.view">
            <field name="name">tasks.carrental.tree</field>
            <field name="model">tasks.carrental</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name"/>
                    <field name="price"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

<record id="action_tasks_carrental" model="ir.actions.act_window">
            <field name="name">Car Rental</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tasks.carrental</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                   car record create
                </p>
            </field>
        </record>
</data>
</odoo>