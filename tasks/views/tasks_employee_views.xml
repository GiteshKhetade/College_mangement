<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
 <!-- Action view -->
    <record id="action_tasks_employee" model="ir.actions.act_window">
			<field name="name"> Employee </field>
			<field name="res_model">tasks.employee</field>
			<field name="view_mode">tree,form</field>
             <field name="help" type="xml">
                <p class="o_view_nocontent_smiling_face">
                    Create task
                </p>
			</field>
		</record>

<!-- from view -->
        <record id="view_employee_form" model="ir.ui.view">
			<field name="name">tasks.employee.form</field>
			<field name="model">tasks.employee</field>
			<field name="arch" type="xml">
				<form string="Add employee ">
                <sheet>
					<group>
						<field name="name" />
						<field name="department" />
                        <field name="email"/>    
                        <field name="tasks_ids" />
                        <field name="task"/>
                        <!-- <field name="task_count"/> -->
                        <!-- <field name="taask_ids"/> -->

					</group>
                </sheet>
				</form>
			</field>
		</record>

<!-- tree view -->
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">tasks.employee.tree</field>
        <field name="model">tasks.employee</field>
        <field name="arch" type="xml">
            <tree sample ="1" string="Employee">
	               		<field name="name" />
						<field name="department" />
                        <field name="email"/>    
                        <field name="tasks_ids" />
                        <field name="task"/>
                        <!-- <field name="task_count"/> -->
                        <!-- <field name="taask_ids"/> -->

            </tree>
        </field>
    </record>
    </data>
</odoo>


