<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="menu_car_rental" model="website.menu">
            <field name="name">Carrental</field>
            <field name="url">/car/rental</field>
            <!--/car/rental should be same for controller  -->
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">50</field>
        </record>



