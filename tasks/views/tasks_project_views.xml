<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
 <!-- Action view -->
    <record id="action_tasks_project" model="ir.actions.act_window">
			<field name="name"> Project </field>
			<field name="res_model">tasks.project</field>
			<field name="view_mode">tree,form</field>
             <field name="help" type="xml">
                <p class="o_view_nocontent_smiling_face">
                    Create project
                </p>
			</field>
		</record>

<!-- from view -->
        <record id="view_task_form" model="ir.ui.view">
			<field name="name">tasks.project.form</field>
			<field name="model">tasks.project</field>
			<field name="arch" type="xml">
				<form string="Add Project ">
                <sheet>
					<group>
						<field name="name" />
						<field name="description" />
                        <field name="emplooyees_ids"/>
                        <field name="task_count"/>
					</group>
                </sheet>
				</form>
			</field>
		</record>

<!-- tree view -->
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">tasks.project.tree</field>
        <field name="model">tasks.project</field>
        <field name="arch" type="xml">
            <tree sample ="1" string="Project">
	               		<field name="name" />
						<field name="description" />
                        <field name="emplooyees_ids"/>
                        <field name="task_count"/>
            </tree>
        </field>
    </record>
    </data>
</odoo>