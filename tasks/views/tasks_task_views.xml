<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
 <!-- Action view -->
    <record id="action_tasks_task" model="ir.actions.act_window">
			<field name="name"> Task </field>
			<field name="res_model">tasks.task</field>
			<field name="view_mode">tree,form</field>
             <field name="help" type="xml">
                <p class="o_view_nocontent_smiling_face">
                    Create Task
                </p>
			</field>
		</record>

<!-- from view -->
        <record id="view_task_form" model="ir.ui.view">
			<field name="name">tasks.task.form</field>
			<field name="model">tasks.task</field>
			<field name="arch" type="xml">
				<form string="Add task ">
                <sheet>
					<group>
						<field name="name" />
						<field name="description" />
                        <!-- <field name="assignedto_id" widget="many2many_tags"></field> -->
                        <field name="deadline" />
                        <field name="assignto_id"></field>
                        <field name="categories_ids"></field>

					</group>
                </sheet>
				</form>
			</field>
		</record>

<!-- tree view -->
    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">tasks.task.tree</field>
        <field name="model">tasks.task</field>
        <field name="arch" type="xml">
            <tree sample ="1" string="Task">
	               		<field name="name" />
						<field name="description" />
                        <!-- <field name="assignedto_id" widget="many2many_tags"/> -->
                        <field name="deadline" />
                        <field name="assignto_id"></field>
                        <field name="categories_ids"></field>
            </tree>
        </field>
    </record>
    </data>
</odoo>